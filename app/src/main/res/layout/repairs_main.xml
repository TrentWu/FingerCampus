<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgother"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_repair"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary">

        <Button
            android:id="@+id/repair_back"
            android:layout_width="24dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="@string/return_icon"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/repair"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:textStyle="normal"/>

    </android.support.v7.widget.Toolbar>

    <Spinner
        android:id="@+id/repair_select"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:entries="@array/repair_type"/>
    <EditText
        android:id="@+id/repair_position"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="@string/repair_position"
        tools:ignore="Autofill,TextFields" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/repair_des"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:hint="@string/repair_des"
            android:gravity="top|start"
            tools:ignore="Autofill,TextFields" />
        <Button
            android:id="@+id/repair_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/firstColor"
            android:layout_alignBottom="@+id/repair_des"
            android:layout_alignEnd="@+id/repair_des"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"/>
        <LinearLayout
            android:id="@+id/repair_plus_ll"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/repair_des"
            android:layout_alignEnd="@+id/repair_des"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/secondColor">
            <Button
                android:id="@+id/repair_audio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:background="#ffffff"
                tools:ignore="ButtonStyle"
                android:text="@string/recording_icon"
                android:layout_gravity="center"
                android:textColor="#03ca74"/>
            <Button
                android:id="@+id/repair_picture"
                android:layout_marginStart="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#ffffff"
                tools:ignore="ButtonStyle"
                android:text="@string/album_icon"
                android:layout_gravity="center"
                android:textColor="#03ca74"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_CameraImg"
        android:layout_width="250dp"
        android:layout_height="150dp" />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/submit"
        android:background="@color/firstColor"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/submit"/>
</LinearLayout>
