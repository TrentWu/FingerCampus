<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_usercenter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary">

        <Button
            android:id="@+id/back"
            android:layout_width="24dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="@string/return_icon"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/usercenter"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:textStyle="normal"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/head"
            android:layout_width="118dp"
            android:layout_height="110dp"
            android:contentDescription="@string/todo"
            android:src="@mipmap/head" />

        <LinearLayout
            android:id="@+id/stdname_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stdname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="姓名:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/stdname_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stdphone_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stdphone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="手机号:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/stdphone_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stdsex_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stdsex"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="性别:"
                android:textColor="@color/firstColor"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/stdsex_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stduniversity_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stduniversity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="大学:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/stduniversity_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stdcollege_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stdcollege"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="院系:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/stdcollege_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stdmajor_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stdmajor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="专业:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/stdmajor_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stdclass_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stdclass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="班级:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/stdclass_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stdno_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stdno"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="学号:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/stdno_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edustartdate_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edustartdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:text="入学年份:"
                android:textColor="@color/firstColor"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/edustartdate_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="未填写"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_addstudentinfo"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/addstudentinfo"
                android:background="@drawable/btn"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textSize="18sp"
                android:background="@drawable/btn"/>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textSize="18sp"
                android:background="@drawable/btn"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>